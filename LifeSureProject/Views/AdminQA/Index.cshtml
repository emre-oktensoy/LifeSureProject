@{
    ViewBag.Title = "Konuya Göre Soru-Cevap";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Konu Belirtin</h2>

<form method="post">
    <input type="text" name="konu" class="form-control" placeholder="Örn: Hayat Sigortası" required />
    <button type="submit" class="btn btn-primary mt-2">Soru-Cevap Oluştur</button>
</form>

<hr />

@if (ViewBag.Hata != null)
{
    <div class="alert alert-danger">@ViewBag.Hata</div>
}

@if (ViewBag.Soru != null && ViewBag.Cevap != null)
{
    <div class="card mt-4">
        <div class="card-body">
            <h4><b>Soru:</b> @Html.Raw(ViewBag.Soru)</h4>
            <h4><b>Cevap:</b> @Html.Raw(ViewBag.Cevap)</h4>
        </div>
    </div>
}

@if (ViewBag.RawJson != null)
{
    <details class="mt-3">
        <summary>Ham JSON'u Göster</summary>
        <pre>@ViewBag.RawJson</pre>
    </details>
}




