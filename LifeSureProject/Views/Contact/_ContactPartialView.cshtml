@model LifeSureProject.Models.DataModels.TblContact

<div class="pt-5" style="border-top: 1px solid rgba(255, 255, 255, 0.08);">
    <div class="row g-0">
        <div class="col-12">
            <div class="row g-4">
                <div class="col-lg-6 col-xl-4">
                    <div class="d-flex">
                        <div class="btn-xl-square bg-primary text-white rounded p-4 me-4">
                            <i class="fas fa-map-marker-alt fa-2x"></i>
                        </div>
                        <div>
                            <h4 class="text-white">@Resources.Resource.Address</h4>
                            <p class="mb-0">@Model.Address</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-xl-4">
                    <div class="d-flex">
                        <div class="btn-xl-square bg-primary text-white rounded p-4 me-4">
                            <i class="fas fa-envelope fa-2x"></i>
                        </div>
                        <div>
                            <h4 class="text-white">@Resources.Resource.MailUs</h4>
                            <p class="mb-0">@Model.Mail</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-xl-4">
                    <div class="d-flex">
                        <div class="btn-xl-square bg-primary text-white rounded p-4 me-4">
                            <i class="fa fa-phone-alt fa-2x"></i>
                        </div>
                        <div>
                            <h4 class="text-white">@Resources.Resource.Telephone</h4>
                            <p class="mb-0">@Model.Telephone</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>